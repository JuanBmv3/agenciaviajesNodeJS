extends ./layout/index


block contenido
    h1(class="mt-5 text-center")=titulo
    main.container.mt-5
       
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        .row.testimoniales 
            each testimonial in testimoniales
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                            p.mb-0
                                | #{testimonial.mensaje}
                            footer.blockquote-footer
                                | #{testimonial.nombre}


        div.row
            h2.d-block.w-100.text-center Agrega un Testimonial 

            if(errores)
                .alert.col.alert-danger.text-center No se permiten campos vacios.
            
        .row.justify-content-center.col
            .col-md-8.formulario 
                form(action="/testimoniales" method="POST")
                    .form-group
                        label(for="nombre") Nombre
                        input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control",
                        value=nombre)
                    .form-group
                        label(for="correo") Correo
                        input#correo(type="text", placeholder="Correo", name="correo", class="form-control",
                        value=correo)
                    .form-group
                        label(for="Mensaje") Mensaje
                        textarea#mensaje(type="text", placeholder="Mensaje", name="mensaje", class="form-control"
                        rows="3")=mensaje
                    
                    input.btn.btn-success.btn-block(type="submit")

